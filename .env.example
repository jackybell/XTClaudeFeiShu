# Feishu Bot Configuration
FEISHU_APP_ID=your_feishu_app_id_here
FEISHU_APP_SECRET=your_feishu_app_secret_here
FEISHU_BOT_NAME=XT Claude Code

# Claude Code Configuration
# IMPORTANT: ANTHROPIC_API_KEY is required even when using CLAUDE_EXECUTABLE_PATH
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Path to Claude Code executable (optional - if not set, uses direct API calls)
# Windows example: CLAUDE_EXECUTABLE_PATH=C:\Users\YourName\AppData\Local\nvs\node\24.5.0\x64\claude.cmd
# Unix/Linux/macOS example: CLAUDE_EXECUTABLE_PATH=/usr/local/bin/claude
# CLAUDE_EXECUTABLE_PATH=

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info

# File Watching Configuration
WATCH_DIR=./workspace
DEBOUNCE_DELAY=1000
